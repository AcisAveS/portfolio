---
interface Props {
  imagen: string;
  descripcion: string;
}
const { imagen, descripcion } = Astro.props;
---

<article>
  <div>
    <img
      src={imagen}
      width="80%"
      height="30%"
      alt="Aqui va la imagen del proyecto"
    />
  </div>
  <p>{descripcion}</p>
</article>

<style>
  article {
    padding: 20px;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    width: 300px;
    height: 350px;
    border-radius: 1rem;
    background: linear-gradient(
      45deg,
      rgb(12, 0, 180) 0%,
      rgb(0, 89, 255) 100%
    );
  }
</style>
