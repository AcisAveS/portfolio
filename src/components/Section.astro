---
interface Props {
  id?: string;
  titulo?: string;
  clases?: Array<string>;
}
const { id, titulo, clases } = Astro.props;
const clase = clases?.join(" ");
---

<section id={id} class={clases! ? clase : "estilo"}>
  {titulo! ? <h1>{titulo}</h1> : null}
  <slot />
</section>

<style>
  .estilo {
    height: 100vh;
    width: 100%;
  }
  
  section {
    padding-top: 80px;
  }

  h1 {
    font-size: 35px;
    color: rgb(156, 227, 255);
    font-weight: bold;
  }
</style>
