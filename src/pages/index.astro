---
import Plantilla from "@/layouts/Plantilla.astro";
import Section from "@/components/Section.astro";
import Pildoras from "@/components/Pildoras.astro";
import Proyecto from "@/components/Proyecto.astro";
import portfolio from "@/content/portfolio.json";

const { proyectos, contacto } = portfolio;
---

<Plantilla
  titulo={"Portfolio - Acis"}
  descripcion={"Portfolio de Acis Avendaño Sánchez"}
>
  <main>
    <Section id="inicio" clases={["inicio"]}>
      <aside class="inicio-izquierdo">
        <h1>
          <span class="texto-llamativo">¡Hola!</span> soy Acis Avendaño Sánchez,
          soy desarrollador <span class="texto-llamativo"
            >Full Stack Junior</span
          >
        </h1>
        <div class="contenedor-pildoras">
          <Pildoras
            enlace={contacto.linkedin}
            texto="LinkedIn"
          >
            <i class="fa-brands fa-linkedin"></i>
          </Pildoras>
          <Pildoras enlace={contacto.github} texto="GitHub">
            <i class="fa-brands fa-github"></i>
          </Pildoras>
          <Pildoras enlace="" texto="Descargar CV">
            <i class="fa-solid fa-download"></i>
          </Pildoras>
        </div>
      </aside>
      <aside class="inicio-derecho">
        <img
          src="./foto.jpeg"
          width="500px"
          height="500px"
          alt="Foto de Acis"
        />
      </aside>
    </Section>
    <Section id="sobremi" titulo="Proyectos" clases={["proyectos"]}>
      <div>
        {
          proyectos.map((proyecto) => {
            return (
              <Proyecto
                imagen={proyecto.imagen}
                descripcion={proyecto.descripcion}
              />
            );
          })
        }
      </div>
    </Section>
    <Section id="sobremi" titulo="Sobre mí" />
  </main>
</Plantilla>

<style is:global>
  main {
    padding-top: 100px;
    display: flex;
    flex-direction: column;
    margin: auto;
    max-width: 1200px;
  }

  .inicio {
    align-items: center;
    display: flex;
    justify-content: space-around;
    height: calc(100vh - 100px);
  }

  .inicio-izquierdo {
    width: 50%;
  }
  .inicio-derecho {
    display: flex;
    justify-content: center;
    width: 50%;
  }

  .inicio h1 {
    font-size: 40px;
  }

  .inicio img {
    height: 500px;
    width: 500px;
    object-fit: cover;
    object-position: 100% 60%;
    border-radius: 100%;
  }

  .texto-llamativo {
    color: rgb(22, 57, 255);
  }

  .contenedor-pildoras {
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 10px;
  }

  .proyectos {
    display: flex;
    flex-direction: column;
  }

  .proyectos div {
    display: flex;
    flex-direction: row;
    justify-content: center;
    flex-wrap: wrap;
    gap: 20px;
  }
</style>
